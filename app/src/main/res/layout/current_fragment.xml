<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_yourLoc">

            <ImageButton
                android:id="@+id/ib_profsettings"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/marker"
                android:scaleType="centerInside"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:text="View Map"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="Location of Race"
            android:textSize="15sp"
            android:id="@+id/tv_currloc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="Date of Race"
            android:textSize="15sp"
            android:id="@+id/tv_currdate"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="Time of Race"
            android:textSize="15sp"
            android:id="@+id/tv_currtime"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:text="4 Participants"
            android:layout_gravity="center"
            android:id="@+id/tv_numUsers"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="40dp"
        android:layout_gravity="center|bottom">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Tara!"
            android:textSize="20sp"
            android:layout_gravity="center|bottom"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/round_button"
            android:id="@+id/button_go"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Leave"
            android:textSize="20sp"
            android:layout_gravity="center|bottom"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/round_button_red"
            android:id="@+id/button_leave"/>
    </LinearLayout>

</LinearLayout>